{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9">
  {{- $pages := where .Site.RegularPages "Section" "in" (slice "offres" "public" "etranger" "stage") }}
  {{- range $pages }}
  {{- if and (not .Draft) (not .Date.IsZero) }}
  <url>
    <loc>{{ .Permalink }}</loc>
    <news:news>
      <news:publication>
        <news:name>{{ .Site.Title }}</news:name>
        <news:language>fr</news:language>
      </news:publication>
      <news:publication_date>{{ .Date.Format "2006-01-02T15:04:05-07:00" }}</news:publication_date>
      <news:title>{{ .Title }}</news:title>
    </news:news>
  </url>
  {{- end }}
  {{- end }}
</urlset>
